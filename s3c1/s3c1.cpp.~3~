
#include <iostream>


using namespace std;

void cenasPassadas()
{
  cout << " O passado dói. Erros cometidos, não perdoam..." << endl;
}

namespace my_routine
{
  void getUp()
  {
    cout << " Acorda e levanta-te " << endl;
  }

  void fazerCama()
  {
    cout << " Obedece sempre à tua mãe " << endl;
    cout << " Cumpre os teus compromissos"  << endl;
  }

  void pequenoAlmoco()
  {
    cout << " Prepara algo e come" << endl;
  }
}

using namespace my_routine;

int main()
{
  getUp();
  fazerCama();
  pequenoAlmoco();

  ::cenasPassadas;
}
